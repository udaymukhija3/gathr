# Gathr Frontend Environment Configuration
# Copy this file to .env for local development

# API Configuration
# URL of the backend API server
EXPO_PUBLIC_API_URL=http://localhost:8080

# Mock Mode Configuration
# Set to 'true' to use mock data (for development without backend)
# Set to 'false' or omit to use real API (production)
# IMPORTANT: Production builds should NOT set this variable (defaults to false)
EXPO_PUBLIC_MOCK_MODE=true

# Development vs Production Examples:
# =====================================
#
# Development (with backend):
#   EXPO_PUBLIC_API_URL=http://localhost:8080
#   EXPO_PUBLIC_MOCK_MODE=false
#
# Development (without backend, using mocks):
#   EXPO_PUBLIC_API_URL=http://localhost:8080
#   EXPO_PUBLIC_MOCK_MODE=true
#
# Production:
#   EXPO_PUBLIC_API_URL=https://api.gathr.com
#   # Do NOT set EXPO_PUBLIC_MOCK_MODE (defaults to false)
