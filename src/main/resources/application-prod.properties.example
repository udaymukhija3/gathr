# Production Configuration Example
# Copy this file to application-prod.properties and fill in the values
# DO NOT commit the actual application-prod.properties file with secrets!

# Server Configuration
server.port=8080

# Database Configuration (use environment variables in production)
spring.datasource.url=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
spring.datasource.username=${DB_USERNAME}
spring.datasource.password=${DB_PASSWORD}

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false

# Flyway Configuration
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true

# JWT Configuration (MUST be changed in production)
jwt.secret=${JWT_SECRET}
jwt.expiration=86400000

# CORS Configuration (specify exact origins in production)
cors.allowed-origins=${CORS_ALLOWED_ORIGINS}
cors.allow-credentials=true

# OTP Service Configuration
# For production: otp.provider=twilio
otp.provider=twilio

# Twilio Configuration (required when otp.provider=twilio)
# Get credentials from https://www.twilio.com/console
twilio.account-sid=${TWILIO_ACCOUNT_SID}
twilio.auth-token=${TWILIO_AUTH_TOKEN}
twilio.phone-number=${TWILIO_PHONE_NUMBER}

# Slack Webhook Configuration (optional)
slack.webhook.url=${SLACK_WEBHOOK_URL}

# Logging Configuration
logging.level.root=WARN
logging.level.com.gathr=INFO
logging.level.org.springframework.web=WARN
logging.level.org.springframework.security=WARN
logging.level.org.hibernate.SQL=WARN

# Production: How to set environment variables
# ============================================
# 1. Create a .env file (DO NOT commit this):
#    export DB_HOST=your-db-host
#    export DB_PORT=5432
#    export DB_NAME=gathr_prod
#    export DB_USERNAME=gathr_user
#    export DB_PASSWORD=your-secure-password
#    export JWT_SECRET=your-256-bit-secret-key-here
#    export TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxx
#    export TWILIO_AUTH_TOKEN=your-auth-token
#    export TWILIO_PHONE_NUMBER=+1234567890
#    export CORS_ALLOWED_ORIGINS=https://yourapp.com
#    export OTP_PROVIDER=twilio
#
# 2. In Kubernetes/Docker, set these as secrets/environment variables
# 3. Run with profile: java -jar -Dspring.profiles.active=prod gathr-backend.jar
